{
  "manifest_version": 3,
  "name": "Fake News Scanner",
  "version": "1.0",
  "permissions": ["scripting", "tabs", "activeTab", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "FakeChecker"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentscript.js"],
      "run_at": "document_idle"
    }
  ]
}
